generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id         String   @id @default(uuid())
  buyer      String
  seller     String
  amount     Float
  status     Status   @default(PENDING)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  expiresAt  DateTime
}

enum Status {
  PENDING
  DELIVERED
  CONFIRMED
  RELEASED
  EXPIRED
}
